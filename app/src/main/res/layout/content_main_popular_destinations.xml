<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:id="@+id/popular_destinations_list"
    android:layout_below="@id/popular_destinations"
    android:layout_marginTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/imageViewLayout"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/i1" />

            <TextView
                android:text="London"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageView2Layout"
            android:layout_toRightOf="@id/imageViewLayout"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"
                android:src="@drawable/i2" />
            <TextView
                android:text="San Francisco"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageView3Layout"
            android:layout_toRightOf="@id/imageView2Layout"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"
                android:src="@drawable/i3" />
            <TextView
                android:text="New York"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageView4Layout"
            android:layout_toRightOf="@id/imageView3Layout"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"
                android:src="@drawable/i4" />
            <TextView
                android:text="Portland"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>

</HorizontalScrollView>